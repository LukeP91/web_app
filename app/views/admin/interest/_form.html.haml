= simple_form_for @interest, html: { class: 'form-horizontal' } do |f|
  = f.input :user_id
  = f.error_span :user_id
  = f.input :name
  = f.error_span :name
  = f.input :category
  = f.error_span :category
  = f.input :category_id
  = f.error_span :category_id
  = f.button :submit, class: 'btn-primary'
  = link_to t('.cancel', default: t("helpers.links.cancel")), interests_path, class: 'btn btn-default'
