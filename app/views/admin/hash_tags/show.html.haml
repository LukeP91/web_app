- model_class = Tweet
.page-header
  %h1=t '.title', default: hash_tag.name
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:user_name)
      %th= model_class.human_attribute_name(:tweet_id)
      %th= model_class.human_attribute_name(:message)
  %tbody
    - tweets.each do |tweet|
      %tr
        %td= tweet.id
        %td= tweet.user_name
        %td= tweet.tweet_id
        %td= tweet.message
