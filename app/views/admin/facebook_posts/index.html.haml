- model_class = Tweet
.page-header
  %h1=t '.title', default: 'Tweets not send to Facebook'

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:user_name)
      %th= model_class.human_attribute_name(:tweet_id)
      %th= model_class.human_attribute_name(:message)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - tweets.each do |tweet|
      %tr
        %td= tweet.user_name
        %td= tweet.tweet_id
        %td= tweet.message
        %td
          %a(href='#' class='btn btn-default send-to-facebook' id="send-to-fb-#{tweet.id}" data-tweet-id="#{tweet.id}")
            Send to Facebook
