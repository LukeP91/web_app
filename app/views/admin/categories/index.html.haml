- model_class = Category
.page-header
  %h1=t '.title', default: model_class.model_name.human.pluralize.titleize

.users-by-category{ "data-category-stats" => users_count_per_category.to_json }

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - categories.each do |category|
      %tr
        %td= category.name
        %td
          = link_to t('.show', default: t("helpers.links.show")), admin_category_path(category), class: 'btn btn-default btn-xs'
          = link_to t('.edit', default: t("helpers.links.edit")), edit_admin_category_path(category), class: 'btn btn-default btn-xs'
          = link_to t('.destroy', default: t("helpers.links.destroy")), admin_category_path(category), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs btn-danger'

= link_to t('.new', default: t("helpers.links.new")), new_admin_category_path, class: 'btn btn-primary'
