.page-header
  %h1=t '.title', default: user.full_name

%p
  %strong #{ User.human_attribute_name(:email) }:
  %br
  = user.email

%p
  %strong #{ User.human_attribute_name(:first_name) }:
  %br
  = user.first_name

%p
  %strong #{ User.human_attribute_name(:last_name) }:
  %br
  = user.last_name

- if user.gender
  %p
    %strong #{ User.human_attribute_name(:gender) }:
    %br
    = user.gender

- if user.age
  %p
    %strong #{ User.human_attribute_name(:age) }:
    %br
    = user.age

- if user.interests.any?
  %h4 Interests:

  %table.table.table-striped
    %thead
      %tr
        %th= Interest.human_attribute_name(:name)

        %th= Interest.human_attribute_name(:category)
    %tbody
      - user.interests.each do |interest|
        %tr
          %td= interest.name

          %td= interest.category

= link_to t('.back', default: t("helpers.links.back")), admin_users_path, class: 'btn btn-danger'
= link_to t('.edit', default: t("helpers.links.edit")), edit_admin_user_path(user), class: 'btn btn-success'
