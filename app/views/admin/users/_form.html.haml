= simple_form_for [:admin, @user], html: { class: 'form-horizontal' } do |f|
  = f.input :email

  = f.error_span :email

  = f.input :first_name

  = f.error_span :first_name

  = f.input :last_name

  = f.error_span :last_name

  = f.input :gender, collection: ["Male", "Female"]

  = f.error_span :gender

  = f.input :age, collection: 1..120

  = f.error_span :age

  = f.input :admin, collection: ["true", "false"]

  = f.error_span :admin

  = f.input :password

  = f.error_span :password

  = f.input :password_confirmation

  = f.error_span :password_confirmation

  = f.button :submit, class: 'btn-primary'

  = link_to t('.cancel', default: t("helpers.links.cancel")), admin_user_path(@user), class: 'btn btn-default'
