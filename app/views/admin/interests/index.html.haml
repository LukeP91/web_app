- model_class = Interest
.page-header
  %h1=t '.title', default: model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:category)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - interests.each do |interest|
      %tr
        %td= interest.name
        - if interest.category
          %td= interest.category.name
        - else
          %td
        %td
          = link_to t('.show', default: t("helpers.links.show")), admin_interest_path(interest), class: 'btn btn-default btn-xs', id: "interest_show_#{interest.id}"
          = link_to t('.edit', default: t("helpers.links.edit")), edit_admin_interest_path(interest), class: 'btn btn-default btn-xs', id: "interest_edit_#{interest.id}"
          = link_to t('.destroy', default: t("helpers.links.destroy")), admin_interest_path(interest), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs btn-danger', id: "interest_delete_#{interest.id}"

= link_to t('.new', default: t("helpers.links.new")), new_admin_interest_path, class: 'btn btn-primary'
